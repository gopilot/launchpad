@import '_settings'


// smaller header
@media(max-width: 600px)
    h1
        font-size 42px

    .tab-container
        display block
        width 100%
        padding 10px
        .tab-item
            display block
            border-left none
            border-top 1px solid #333

    .tab-item:first-child
        border-top none

    .markup
        h1
            font-size 30px
        h2
            font-size 20px